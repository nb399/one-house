/* pages/article/article.wxss */

.page-modal {
  position: fixed;
  background: rgba(0, 0, 0, 0.8);
  overflow: hidden;
  border-radius: 10rpx;
  width:240rpx;
  height:240rpx;
  z-index: 1000;
}
