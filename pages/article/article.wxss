  z-index: 100;
}

.top-swiper image {
  width: 100%;
  height: 100%;
}

video {
  width: 100%;
  height: 520rpx;
}

.background_bar {
  background: #f5f5f5;
  width: 720rpx;
  height: 48rpx;
  font-size: 22rpx;
  padding-left: 30rpx;
  color: #a2a2a2;
  line-height: 48rpx;
  border-top: 1rpx solid #f0efef;
  border-bottom: 1rpx solid #f0efef;
}

.container_article {
  margin-bottom: 20rpx;
  position: relative;
}

.article_head {
