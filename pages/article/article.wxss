  border: 1rpx solid #d1d1d1;
  margin-left: 30rpx;
  line-height: 60rpx;
}

.bottom-bg {
  height: 120rpx;
  width: 100%;
}

.bt-reply {
  display: flex;
  justify-content: flex-end;
  height: 30rpx;
}

.btn-reply {
  display: flex;
  align-items: center;
  font-size: 24rpx;
}

.btn-reply image {
  height: 26rpx;
  width: 26rpx;
  margin-right: 6rpx;
}

.bt-forward {
  display: flex;
