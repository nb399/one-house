  font-size: 22rpx;
  justify-content: space-around;
  height: 60rpx;
}
.article_time {
  font-size: 16rpx;
  color: #a2a2a2;
}

.article_topic {
  font-size: 32rpx;
  font-weight: bold;
  margin: 0 30rpx;
}

.article_main {
  display: block;
  margin: 30rpx 30rpx;
  font-size: 30rpx;
  line-height: 50rpx;
  width: auto;
  height: auto
}



.container_comment {
  height: auto;
}
.no-content{
  text-align: center;
  font-size: 22rpx;
  color: #a2a2a2;
  padding: 50rpx;
}
.comment_box {
  display: flex;
  flex-direction: column;
  margin-right: 60rpx;
  justify-content: center;
}

.long_border {
  width: 100%;
  border-bottom: 1rpx solid #a2a2a2;
}

.short_border {
  margin-left: 10%;
  width: 90%;
