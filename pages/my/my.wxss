@import "../tpls/base.wxss";


button {
  position: initial;
  display: initial;
  margin-left: initial;
  margin-right: initial;
  padding-left: initial;
  padding-right: initial;
  box-sizing: initial;
  font-size: initial;
  text-align: initial;
  text-decoration: initial;
  line-height: initial;
  border-radius: initial;
  -webkit-tap-highlight-color: initial;
  overflow: initial;
  color: initial;
  background-color: initial;
  width:auto;
height:auto;
padding:0;

}

button::after {
  content: "";
  width: initial;
  height: initial;
  position: initial;
  top: initial;
  left: initial;
  border: initial;
  -webkit-transform: initial;
  transform: initial;
  -webkit-transform-origin: initial;
  transform-origin: initial;
  box-sizing: initial;
  border-radius: initial;
}

.my-container{
    background-color:#EDEDED;
}
.my-header{
  border-top: 1rpx solid #000;
   width: 100%;
   height: 210rpx;
    color: #fff;
    font-size: 28rpx;
    position: relative;
}
.my-hearder-bg{
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 98;
}
.my-header-user{
  position: absolute;
  z-index: 99;
  top: 50%;
  left: 30rpx;
  transform: translateY(-50%);
  display:flex;
align-items:center;

}
.my-header-user image{
    height: 110rpx;
    width: 110rpx;
    border-radius: 100rpx;
    border: 2rpx solid #fff;
}
.my-header-user text{
    margin-left: 20rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.my-address{
    background-color: #fff;
}

.section{
    border-bottom:1rpx solid #E9E9E9;
    margin-left:30rpx;
    margin-right: 30rpx;
    height: 90rpx;
}
.section:last-child{
    border-bottom:none;
}
.section input{
    font-size: 28rpx;
    color:#7C7C7C;
    padding: 20rpx 30rpx 20rpx 0;
}
.section picker{
    height: 100%;
    flex: 1;
}
.section picker view{
    width: 100%;
    height: 90rpx;
    font-size: 28rpx;
    color:#7C7C7C;
    display: flex;
    align-items: center;
}
.section picker view .key{
    color: #333;
}
.section picker view .val{
    margin-left: 20rpx;
}
.section .arrow-icon{
    flex-basis: 40rpx;
    background-color: #AB956D;
    display: flex;
    align-items: center;
    justify-content: center;
}
.section .arrow-icon image{
    height: 32rpx;
    width: 32rpx;
}

.own-box{
    margin-top: 10px;
    /*border-bottom: 1rpx solid #EDEDED;*/
}

.item-title{
   padding:25rpx 0;
color:#999999;
text-align:center;
border-bottom:1rpx solid #EDEDED;
font-size:28rpx;
background-color:#fff;
display:flex;
align-items:center;
justify-content:space-between;
}
.title-text{
  flex: 1;
  text-align: center;
}
.item-title image{
    position: absolute;
