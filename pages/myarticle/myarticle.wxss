.Summary_box{
  width: 100%;
  height: 400rpx;
  display: flex;
  flex-direction: column;
 background:white;
 margin: 15rpx 0;
}
.Summary_box_top_img{
 margin:0 20rpx; 
 display: flex;
 justify-content: center;
 align-items: center;
 height: 100rpx;
} 

.Summary_box_top{
display: flex;
height: 30%;
flex-direction: row;
align-items: center;
color: 22rpx;
}
.Summary_box_top_img image{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50rpx;
}
.author_box{
  width: 46%;
}
.article_time{
font-size:24rpx;
color:gray;
width:34%;
height: 100rpx;
line-height: 100rpx;
}
.delete{
  margin: 0;
}
.Summary_box_main{
  height: 55%;
  margin:10rpx 3%;
}
.Summary_box_main_text{
  height: 46rpx;
  overflow: hidden;
}
.Summary_box_main_imgbox{
display: flex;
margin:20rpx 0;
}
.Summary_box_main_image{
  width: 126rpx;
  height: 126rpx;
  margin-right: 16rpx;
}
.Summary_box_bottom{
  display: flex;
  flex-direction: row;
  height: 15%;
  justify-content: space-between;
  border-top: 1rpx solid #d1d1d1;
  color: #a2a2a2;
}
.Summary_box_bottom view{
  width: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.write_btn{
  position: fixed;
  bottom:120rpx;
  right: 40rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius:60rpx;
  background: gray; 
   display: flex;
  justify-content: center;
  align-items: center; 
}
.write_btn image{
  width: 85rpx;
  height:85rpx;
  
}