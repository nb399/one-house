/* 热门搜索 */

.hot-search-box {
  margin: 0 30rpx;
  display: flex;
  flex-wrap: wrap;
}

.hot-search-title {
  margin: 50rpx 32rpx 32rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.hot-search-item {
  padding: 10rpx 20rpx;
  background: #f5f5f5;
  color: #222;
  font-size: 28rpx;
  border-radius: 50rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}

.search-res-box {
  /* margin: 50rpx 0; */
}

.search-res-item {
  padding: 0 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  font-size: 28rpx;
  color: #222;
  border-bottom: 1rpx solid #f5f5f5;
}
/*图片*/
.imgs_box {
  width: 88%;
  display: flex;
  flex-direction: row;
  margin: 30rpx auto 0;
  flex-wrap: wrap;
}
.imgs_box_item{
  width:19%;
height:0;
margin-bottom:20rpx;
margin-right:1%rpx;
padding-bottom:19%;
position: relative;

}
.imgs_box_item_image {
  position: absolute;
width: 100%;
