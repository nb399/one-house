}

@keyframes recorder-animation {
  0% {
    left: 42rpx;
  }

  100% {
    left: 588rpx;
  }
}

.running {
  animation: recorder-animation 10s linear 0s;
  animation-play-state: running;
  animation-fill-mode: forwards;
}

.pause {
  animation-play-state: paused;
}

