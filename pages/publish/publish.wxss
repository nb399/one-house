.page-modal {
  position: fixed;
  background: rgba(0, 0, 0, 0.8);
  overflow: hidden;
  border-radius: 10rpx;
  width:220rpx;
  height:220rpx;
}
.section-modal{
  width: 100%; 
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 24rpx;
}
.sound-animation{
  width: 130rpx;
  height: 130rpx;
  
}
.loading-gif {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 110rpx;
  width: 100%;
}

.loading-gif image {
  width: 20rpx;
  height: 20rpx;
}


.markTitle{
  width: 90%;
  height: 150rpx;
  margin: 60rpx auto;
  font-size: 44rpx;
  font-weight: bold;

}
.mark-section{
   width: 80%;
  margin: 60rpx 15% 60rpx 5%;
  display: flex;
  flex-wrap: wrap
}
.markBox{
  transition: background 0.5s linear 0s;
  width: auto;
  height: 50rpx;
  font-size: 32rpx;
  text-align: center;
  line-height: 50rpx;
  color: #fff;
  background: #d1d1d1;
  font-weight: bold;
  padding: 10rpx 20rpx;
  margin: 0 20rpx 60rpx 0;
}
.marked{
  transition: background 0.5s linear 0s; 
  background: #ec463d !important;
}
.btn-nextStep{
  width: 90%;
  margin: 0 auto;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 42rpx;
  color: #fff;
  background: #000;
  border-radius: 6rpx;
}
.AA-greyline{
  height: 24rpx;
  width: 100%;
  background: #eeeeee;
}
