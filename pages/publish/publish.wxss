}
.section-progress{
  height: 200rpx;
  width: 100%;
  padding:60rpx 0;
  position: relative;
  display: flex;
  justify-content: center;
}
.recorder-progress{
  width: 60rpx;
  height: 60rpx;
  box-shadow: 3.07rpx 3.94rpx 20rpx 5rpx rgba(0,0,0,0.1); 
  background: #ec463d;
  border-radius: 60rpx;
  position:absolute;
  top: 40rpx;
  left: 42rpx; 
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 24rpx
}

@keyframes recorder-animation{ 0% { left: 42rpx; } 100% { left: 588rpx; } }
.running{
animation: recorder-animation 10s linear 0s;
animation-play-state: running;
animation-fill-mode: forwards;
}
.pause{
  animation-play-state: paused ;
}
.publish_box {
  background: white; 
   width: 92%;
